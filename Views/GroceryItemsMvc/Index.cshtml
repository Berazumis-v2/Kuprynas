@model IEnumerable<Kuprynas.Models.GroceryItem>

@{
    ViewData["Title"] = "Grocery Items";
}

<h1>Grocery Items</h1>

<p>
    <a asp-action="Create">Create New Item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Category</th>
            <th>Purchased</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Category</td>
                <td>@item.Purchased</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
