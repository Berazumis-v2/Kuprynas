@model Kuprynas.Models.GroceryItem

@{
    ViewData["Title"] = "Delete Grocery Item";
}

<h1>Delete Grocery Item</h1>
<h4>@Model.Name</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>

    <dt class="col-sm-2">Unit</dt>
    <dd class="col-sm-10">@Model.Unit</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Purchased</dt>
    <dd class="col-sm-10">@Model.Purchased</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Are you sure you want to delete this item?</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
